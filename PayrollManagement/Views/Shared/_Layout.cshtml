<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PayrollManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PayrollManagement.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    @* font-awesome *@
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @* googlefonts *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Audiowide">
</head>
<body  style="background-image: linear-gradient(to right, rgba(204, 165, 255, 0.801), rgb(130, 209, 255));">
    <header class="container-fluid" style="margin-left:-10px'width:100vw;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow " style="border-radius:1em">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'Audiowide', sans-serif;">MonthEnd</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1">
                        
                        @{
                            if(@ViewBag.usermode == "Admin"){
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="registration">Enroll</a>
                                </li>
                        
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ViewEmployee">ViewDetails</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Salary" asp-action="paymentData">Payment Details</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Salary" asp-action="payInBulk">Bulk Payment</a>
                                </li>
                                <!-- <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Salary" asp-action="payBonusAndDues">Bonus Payment</a>
                                </li> -->
                                  <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="viewComplaints">View Complaints</a>
                                </li>
                            }
                        }
                                
                           @{
                                if(@ViewBag.status != "logged"){
                                    <li class="nav-item signin-icon" >
                                        <a asp-controller="Home" asp-action="login" style="text-decoration: none;color:black;float:right">
                                            <i class="fa fa-sign-in" style="font-size:30px;"></i>
                                        </a>
                                    </li>

                                }else{

                                    if(@ViewBag.usermode == "Admin"){
                                        <li class="nav-item signout-icon">
                                            <div>@ViewBag.username</div>
                                            <a asp-controller="Employee" asp-action="profile">
                                                <i class="fa fa-user" style="font-size:30px;margin:5px 15px 0 15px;color:black"></i>
                                                
                                            </a>
                                            
                                            <a asp-controller="Home" asp-action="logout" style="text-decoration: none;color:black;">
                                                <i class="fa fa-sign-out" style="font-size:30px;margin:5px 15px 0 15px"></i>
                                            </a>
                                        </li>
                                    }else{
                                        
                                        <li class="nav-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="index">Home</a>
                                        </li>
                                        <li class="nav-item">
                                                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="getComplaints">Send Complaints</a>
                                        </li>
                                     
                                        <li class="nav-item emp-signout">
                                        <div>@ViewBag.username</div>
                                        <a asp-controller="Employee" asp-action="profile">
                                            <i class="fa fa-user" style="font-size:30px;margin:5px 15px 0 15px;color:black"></i>
                                            
                                        </a>
                                        
                                         <a asp-controller="Home" asp-action="logout" style="text-decoration: none;color:black;">
                                            <i class="fa fa-sign-out" style="font-size:30px;margin:5px 15px 0 15px"></i>
                                        </a>
                                    </li>
                                    }
                                    
                                    
                                }

                           }
                            
                                 
                           
                        

                            
                               

                            
                        
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-left:-10px;width:100vw;" >
        <main role="main" class="pb-3" >
            @RenderBody()
        </main>
    </div>
    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PayrollManagement -@ViewBag.name
            </div>
    </footer> *@
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
