@{
    ViewData["Title"] = "Admin Page";
    Layout = "_Layout";
}



<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Payroll management</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    @* font-awesome *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @* google icon *@
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body >
  
    <div class="pt-1 jumbotron jumbotron-text  text-black  admin-header" style="font-size:2em">
      welcome @ViewBag.username 
      <h5>@TempData["Time"]</h5>
    </div>
    <div class="card-container">
      @{
        if(@ViewBag.usermode == "Admin"){
            <!-- <div class="admin-cards">
            <div >
              <i class="material-icons " style="font-size:10em">assignment</i>
            </div>
            <div>
              <a asp-controller="Admin" asp-action="registration">
                <button class="button">Enroll</button>
              </a>
            </div>
          </div> -->
          <div class="admin-cards">
            <div>
              <span class="material-symbols-rounded "  style="font-size:9em">
                <i class="fa fa-search" aria-hidden="true"></i>
              </span>
            </div>
            <div>
              <a asp-controller="Admin" asp-action="viewEmployee">
                <button class="button">View</button>
              </a>
            </div>
          </div>
          <div class="admin-cards">
            <div style="margin-top:-0.7em;margin-bottom:0.7em">
              <span style="font-size:7em; ">
                <img src="../image/addUser.png" />
              </span>
            </div>
            <div>
              <a asp-controller="Admin" asp-action="registration">
                <button class="button">Add User</button>
              </a>
            </div>
          </div>
           <div class="admin-cards">          
                <img src="../image/payBulk.png" height="175px" width="150px"/>          
            <div>
              <a asp-controller="Salary" asp-action="payInBulk">
                <button class="button">pay Bulk</button>
              </a>
            </div>
          </div>
          <div class="admin-cards">          
                <img src="../image/admin.png" height="150px" width="150px"/>          
            <div>
              <a asp-controller="Admin" asp-action="viewAdmin">
                <button class="button">Admins</button>
              </a>
            </div>
          </div>

        }
      }
      
    </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
  </body>
</html>