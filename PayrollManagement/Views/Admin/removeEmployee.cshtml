@model Employee
@{
    Layout = "_Layout";
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
   
    <div class="container card">
        <form method="post" class="form-container">
             <div>
                <h1>Remove Employee</h1>
            </div>
            <div class="mb-3 mt-3">
                <label  class="form-label"> Employee ID </label>
                <input asp-for="EmployeeID" name="EmployeeID"class="form-control" value=@ViewBag.employeeID placeholder="Enter employee ID"/>
                <span asp-validation-for="EmployeeID" style="color:rgb(255, 68, 68);"></span>
            </div>   
            <div class="mt-3">
                <button type="submit" class="btn btn-primary"> Delete </button>
                
            </div> 

        </form>
    </div>
</body>

@section Scripts{

    <partial name ="_ValidationScriptsPartial"/>
}